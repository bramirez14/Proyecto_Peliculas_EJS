<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar</title>
</head>
<body>

    <form action="/edit/ <%= edit.id %> " method="POST">
        <label for="">Title</title></label>
        <input type="text" name="title" value="<%= edit.title %> ">
        <br>
        <label for="">Rating</label>
        <input type="text" name="rating" value="<%= edit.rating %> "> 
        <br>
        <label for="">Awards</label>
        <input type="text" name="awards" value=" <%= edit.awards %> ">
        <br>
        <label for="">Length</label>
        <input type="text" name="length" value="<%= edit.length %> ">
        <br>
        <label for="">Release Date</label>
        <input type="text" name="release_date" value="<%= edit.release_date %> ">
        <br>
        <label for="">Genero</label>
        <select name="genre_id" id="">
        <% generos.forEach(genero=> { %>//lista de generos 
            <% if (edit.genreId===genero.id){  %> 
                <option value="<%= genero.id %>"  selected><%= genero.name %> </option>
        <% }else{%> 
            <option value="<%= genero.id %>"><%= genero.name %> </option>
        <% }})  %> 
    </select>

     <select name="actors" id="" multiple>
        <% actors.forEach(actor => { %>           
            <% if (edit.Actors.some(actorPelicula => actorPelicula.id === actor.id)) { %>
            <option value="<%= actor.id %>" selected> <%= actor.first_name +' '+ actor.last_name %> </option>
            <% } else { %>
            <option value="<%= actor.id %> "><%= actor.first_name +' '+ actor.last_name %> </option>
            <% } %>
        <% }) %>
</select> 
        <button type="submit">Editar!</button>

    </form>

</body>
</html>